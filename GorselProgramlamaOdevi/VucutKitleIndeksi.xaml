<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaOdevi.VucutKitleIndeksi"
             Title="VucutKitleIndeksi">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Kilonuz (KG)" FontSize="Medium" />
        <Slider x:Name="weightSlider" Minimum="1" Maximum="200" ValueChanged="OnSliderValueChanged" />
        <Label x:Name="weightLabel" />

        <Label Text="Boyunuz (CM)" FontSize="Medium" />
        <Slider x:Name="heightSlider" Minimum="0.5" Maximum="2.5" ValueChanged="OnSliderValueChanged" />
        <Label x:Name="heightLabel" />

        <Label x:Name="resultLabel" FontSize="Large" />
        <Label x:Name="bmiCommentLabel" FontSize="Large" TextColor="Red" />
    </StackLayout>
</ContentPage>